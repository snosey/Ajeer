<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteDark"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/margin_Medium">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:layout_width="@dimen/dimen_VerySmall"
                android:layout_height="@dimen/dimen_VerySmall"
                android:background="@drawable/circel_stroked"
                android:text="1"
                android:textColor="@color/green" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="معلق"
                android:textColor="@color/green" />
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/dimen_VeryVerySmall"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin_Small"
            android:background="@color/green" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:layout_width="@dimen/dimen_VerySmall"
                android:layout_height="@dimen/dimen_VerySmall"
                android:background="@drawable/circel_stroked"
                android:text="2"
                android:textColor="@color/green" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="بالطريق"
                android:textColor="@color/green" />
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/dimen_VeryVerySmall"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin_Small"
            android:background="@color/green" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:layout_width="@dimen/dimen_VerySmall"
                android:layout_height="@dimen/dimen_VerySmall"
                android:background="@drawable/circel_stroked"
                android:text="3"
                android:textColor="@color/green" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="وصل"
                android:textColor="@color/green" />
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/dimen_VeryVerySmall"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin_Small"
            android:background="@color/green" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:layout_width="@dimen/dimen_VerySmall"
                android:layout_height="@dimen/dimen_VerySmall"
                android:background="@drawable/circel_stroked_working"
                android:text="4"
                android:textColor="@color/wallet_holo_blue_light" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="يعمل"
                android:textColor="@color/wallet_holo_blue_light" />
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/dimen_VeryVerySmall"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin_Small"
            android:background="@color/black_fat7" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:layout_width="@dimen/dimen_VerySmall"
                android:layout_height="@dimen/dimen_VerySmall"
                android:background="@drawable/circel_stroked_done"
                android:text="5"
                android:textColor="@color/black_fat7" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="مكتمل"
                android:textColor="@color/black_fat7" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_VerySmall"
        android:layout_marginTop="@dimen/margin_VerySmall"
        android:background="@color/white">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_Large"
            android:background="@color/wallet_holo_blue_light"
            android:drawableEnd="@drawable/ic_info_outline_black_24dp"
            android:padding="@dimen/margin_Small"
            android:text="اضغط هنا لرؤيه الفاتوره"
            android:textColor="@color/white" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@color/white">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="@dimen/dimen_Small"
            android:layout_height="@dimen/dimen_Small"
            android:layout_margin="@dimen/margin_Medium"
            android:src="@drawable/logo_ajeer" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_Small"
            android:layout_marginStart="@dimen/margin_Medium"
            android:layout_marginTop="@dimen/margin_Medium"
            android:layout_toEndOf="@id/logo"
            android:text="Turki Arjani"
            android:textColor="@color/black_8am2" />

        <RatingBar
            android:id="@+id/rate"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_marginStart="@dimen/margin_Medium"
            android:layout_toEndOf="@id/logo"
            android:numStars="5"
            android:rating="4.5" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rate"
            android:layout_toEndOf="@id/logo"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:layout_margin="@dimen/margin_Small"
                android:background="@color/red"
                android:text="الغاء"
                android:textColor="@color/white" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:layout_margin="@dimen/margin_Small"
                android:background="@color/green"
                android:text="اتصال بالفنى"
                android:textColor="@color/white" />

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_VerySmall"
        android:layout_marginTop="@dimen/margin_VerySmall"
        android:background="@color/white">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_Large"
            android:background="@color/whiteDark"
            android:drawableStart="@drawable/ic_info_outline_black_24dp"
            android:drawableTint="@color/grey"
            android:padding="@dimen/margin_Small"
            android:text="اضغط هنا لرفع شكوى"
            android:textColor="@color/grey" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" />
</LinearLayout>
