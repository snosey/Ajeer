<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.snosey.balto.MainActivity" />

    <ImageView
        android:layout_width="@dimen/dimen_VerySmall"
        android:layout_centerInParent="true"
        android:id="@+id/markerIcon"
        android:src="@drawable/ic_location_on_black_24dp"
        android:layout_height="@dimen/dimen_VerySmall" />



    <Button
        android:id="@+id/chooseService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="اختر الخدمه"
        android:textColor="@color/white"
        android:layout_margin="@dimen/margin_Medium"
        android:background="@color/colorPrimary" />

</RelativeLayout>